<h3>Edit Passage</h3>
<form>
  <div class="form-group">
    <label for="passageDetailsTitle">Title</label>
    <input type="text" class="form-control" id="passageDetailsTitle" value="{{title}}">
  </div>
  <div class="form-group">
    <label for="passageDetailsContent">Content</label>
    <textarea class="form-control" id="passageDetailsContent">{{content}}</textarea>
  </div>
  <div class="form-group passage-links-list">
    <label">Links</label>
    {{{passagesSelect storyId id}}}
  </div>
  <button type="submit" class="btn btn-default">Update</button>
  <a href="#/story/{{storyId}}/">close</a>
</form>
